@if (ShowSearch)
{
    <input type="text" @bind-value="SearchTerm" @bind-value:event="oninput" placeholder="Search books..." class="form-control" />
}

@code {
    [Parameter]
    public string SearchTerm { get; set; }

    [Parameter]
    public EventCallback<string> SearchTermChanged { get; set; }

    [Parameter]
    public bool ShowSearch { get; set; } = true;
}